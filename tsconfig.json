{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "./build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "isolatedModules": true
    },
    "include": [
        "index.ts",
        "components/**/*"
    ],
    "exclude": [
        "node_modules",
        "tests"
    ]
}